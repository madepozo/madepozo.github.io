

@font-face
    font-family 'social'
    src url("../fonts/social.eot?-n6nova")
    src url("../fonts/social.eot?#iefix-n6nova") format('embedded-opentype'),
        url("../fonts/social.woff?-n6nova") format('woff'),
        url("../fonts/social.ttf?-n6nova") format('truetype'),
        url("../fonts/social.svg?-n6nova#social") format('svg')
    font-weight normal
    font-style normal

[class^="icon-"],[class*=" icon-"]
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased
    color #888
    font-family 'social'
    font-size 35px
    font-style normal
    font-variant normal
    font-weight normal
    line-height 50px
    speak none
    text-transform none
    transition all .4s ease-out

.icon-at
    &:before
        content "\e607"
        color #fff

.icon-dot
    &:before
        content "\e603"
        color #f80
        vertical-align bottom
        text-shadow 1px 1px 2px rgba(0,0,0,0.7)

.icon-envelope
    &:before
        content "\e608"
        color #fff
        vertical-align top

.icon-mobile
    &:before
        content "\e60b"
        color #fff
        font-size 1.6em
        margin-right 0.2em

.icon-phone
    &:before
        content "\e60c"
        color #fff
        font-size 1.6em
        margin-right 0.2em

.menu
    ul
        li
            a
                &.icon-twitter
                    &:before
                        content "\e604"
                    
                    &:hover
                        background #55acee
                        color #fff

                &.icon-github
                    &:before
                        content "\e601"

                    &:hover
                        background #444
                        color #eee

                &.icon-facebook
                    &:before
                        content "\e600"

                    &:hover
                        background #3b5998
                        color #fff

                &.icon-linkedin
                    &:before
                        content "\e605"

                    &:hover
                        background #44acff
                        color #fff

                &.icon-google-plus
                    &:before
                        content "\e602"

                    &:hover
                        background #f00
                        color #fff
              
body
    background #22a2d8
    font-family 'Open sans'
    font-size 16px

footer
    background #eee
    border-radius 1em 1em 0 0
    bottom 0
    margin-top 1.4em
    padding 0.6em 0
    text-align center
    
    p
        color #444
        font-family 'Nunito', Arial
        font-size 1.1em
        font-weight 100
        margin 0
        padding 0.4em 0
header
    background #eee
    border-radius 1em
    box-shadow 3px 3px 5px rgba(0,0,0,0.5)
    margin .8em 0 0 0
    
    .info
        font-size 1em
        padding 0.1em
    
        .title
            color #555
            font-family 'Nunito', Arial
            font-size 1.9em
            font-weight 200
            margin 0.3em
            text-align center
        
        .description
            background #1987e1
            border-bottom 3px solid #ccc
            border-radius 0.8em 0.8em 1em
            color #fff
            font-size 1em
            font-weight normal
            margin .5em auto
            padding 1em 1.5em
            text-align justify

    .social
        margin 0 auto
        padding 0.5em 0
        text-align center
        width 95%
    
        .menu
            .follow
                color #f40
                font-size 1.5em
        
        ul
            margin 1em 0
            padding 0
            
            li
                display inline-block
                list-style none
                
                &:nth-child(even)
                    margin 0 0.2em
            a
                background #fff
                border-radius 50%
                display block
                height 50px
                padding 0.3em
                text-align center
                text-decoration none
                width 50px

        .avatar
            margin 0 1em
            position relative

            figcaption
                color #f40
                font-size 1.1em
                text-align center
      
            img
                border-radius 50%
                width 80px
        
            .nota
                border-left 30px solid transparent
                border-right 30px solid transparent
                border-top 15px solid #1987e1
                content ""
                left 20%
                position absolute
                top -35px

header .social .avatar,
header .social .menu
    display inline-block
    vertical-align middle


nav
    margin 0.7em 0

    ul
        margin 0
        text-align center
        
        li
            display inline-block
            list-style none
            margin-right 0.5em
            padding 1em 0
            transition: all .4s ease-out;
            
            &:active
                transform scale(0.9)
                            
            a
                border-bottom 3px solid #009e42
                background #00b84e
                border-radius: 5px;
                color: #fefefe;
                font-size: 14px;
                padding: .5em .6em;
                text-decoration: none;
                transition: all .4s ease-out;

                &:hover
                    background #fff
                    border-bottom 3px solid #777
                    color rgba(black, 0.8)

section
    border-radius 1em
    box-shadow 3px 3px 5px rgba(0,0,0,0.5)
    margin-bottom 1em

strong
    text-decoration underline

.active
    background #eee
    border-bottom 3px solid #777
    color rgba(0,0,0,0.8)

.box-shadow-social
    box-shadow inset 0 0 5px #F9F7F5;

.container
    margin 0 auto
    width 100%

.page
    background #eee
    border-radius 1em
    padding 0.8em 0.5em 1.2em 0.5em
  
    h2
        border-bottom 2px solid #aaa
        border-radius 0 .6em .6em 0
        box-shadow 1px 0 2px rgba(0,0,0,0.8)
        color #777
        font-size 2em
        margin 0 auto
        text-align center
        text-shadow -5px 0px 0px rgba(185,205,175,0.6)
        width 90%
    h3
        color #333
        font-size 24px
        font-weight normal
        margin 0.3em 0
        text-shadow 1px 2px 0 rgba(0,0,0,0.5)

.education
    .type
        margin 0 0 0 1em
        padding 0.1em 0 0.1em 1.4em
        width 90%
    
        .link-mobile
            background #ff4545
            border-radius 5px
            border-bottom 3px solid #F00
            color white
            display none
            float right
            font-size 14px
            margin-top -40px
            padding 0.1em 0.7em
            text-decoration none
            transition all 0.4s ease-in-out

            &:active
                transform scale(0.95)
                
        
        .education_info
            margin-left 1.1em
            
            p
                line-height 54px
                margin 0

                span
                    text-shadow 0 1px 1px rgba(0,0,0,0.6)
                    
        .education_logo
            margin -1.5em 0
            float right
            
            a
                font-size 0.8em
                color #F86

    .superior
        .education_logo
            img
                border-radius 50%
                width 140px
    .online
        .education_logo
            img
                width 140px

    .comunity
        .education_logo
            img
                width 140px

.education .type .education_info,.education .type .education_logo
    display inline-block
    vertical-align top

.education .comunity .education_logo a,
.education .online .education_logo a,
.education .superior .education_logo a
    background #ff4545
    border-radius 5px
    border-bottom 3px solid #F00
    color white
    display block
    font-size 0.7em
    margin-top 0.5em
    padding 0.2em 0.7em
    text-align center
    text-decoration none
    transition all 0.6s ease-in-out

.education .comunity .education_logo a:hover,
.education .superior .education_logo a:hover,
.education .online .education_logo a:hover
    transform scale(.95)

.skills
    .category
        display inline-block
        margin 1%
        position relative
        vertical-align top
        width 30%
        
        h4
            background #1987e1
            border-bottom 1px solid rgba(0,0,0,0.8)
            border-radius 0.4em 0.4em 0 0
            color #fff
            cursor pointer
            margin 0.4em 0 0 0
            padding 0 0.5em
            text-align center
            transition all .5s ease-in
            
            &:hover
                background #eee
                border-radius 0
                color #1987e1
            .arrow
                border-left 6px solid transparent
                border-right 6px solid transparent
                border-top 7px solid #eee
                content ""
                float right
                font-size 1em
                margin-top .5em
                display none

        p
            font-size 0.9em
            line-height 50px
            margin 0
            text-shadow 0 1px 0 rgba(205,245,235,0.6)
            vertical-align middle

        .box-hover
            background #1987e1
            border-radius 0 0 0.7em 0.7em
            color #fff
            display none
            position absolute
            right 0
            top 29px
            width 100%
            z-index 10
      
            .more-info
              font-size 0.9em
              line-height 25px
              padding 0.2em 1.2em
              text-align justify
    .skill
        margin 0 auto
        padding .1em 1.5em
        width 85%

.home
    .personal_information
        padding .3em 0
    
        .info
            background #fff
            border-bottom 2px solid #1987e1
            border-top 3px solid #1987e1
            box-shadow 3px 3px 6px rgba(0,0, 0, 0.5);
            color #333
            font-size 1.1em
            margin 0.8em auto
            padding 1em 1.5em
            text-align justify
            text-shadow 1px 0 0px rgba(0,0,0,0.2)
    
        .contact
            padding 0.1em
  
            p
                background #444
                border-radius .6em
                box-shadow inset 0 0 7px #fff;
                color #fff
                display block
                font-size 1em
                height 45px
                line-height 50px
                margin .8em 0
                text-align center
                vertical-align top
                width 100%
                
                span
                    margin 0 0.4em
                    text-shadow 0 1px 1px rgba(0,0,0,0.6)
                    vertical-align middle
            
                span:last-child
                        margin 0 .2em
                        font-size 1.1em

@media screen and (min-width: 720px)
    
    header
        .info .description
            margin 0.5em auto 
            width 75%

        .social .avatar
          margin-left 5em
    
    .container
        width 85%    

    .home
        .personal_information
            margin 0
            padding 0

            .contact
                margin 0 auto
                width 75%

            .info
                width 75%            


@media screen and (max-width: 520px)
    [class^="icon-"],[class*=" icon-"]
        font-size 25px
        line-height 40px
    
    [class$="-dot"]
        font-size 40px
        line-height 52px
        vertical-align top

    [class$="-at"],
    [class$="-mobile"],
    [class$="-phone"]
        font-size 1.6em
        line-height 35px

    [class$="-envelope"]
        font-size 35px
        line-height 40px

    header
        margin-top 0
        border-radius: 0

        .info .description
            font-size 1em
            
        .social
            .avatar
                margin 0

            .menu ul li a
                height 38px
                padding 0.2em
                width 38px
                    
    .education .type .education_logo
        display none
    
    .education .type .link-mobile
        display inline-block


@media screen and (max-width: 600px)
    .education .type .education_info p span:last-child
        display block
        margin-left 2.5em


@media screen and (max-width: 720px)

    header .social .avatar .nota
        display none
    
    .education .type
        margin 0 1em

    .page h2
        min-width 98%

    .skills .skill .category
        width 100%
        margin-bottom 0.8em

        p
            display inline-block
    

@media screen and (max-width: 1024px)

    .skills .skill .category

        h4 .arrow
            display inline-block
        
       

